<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vibal.utilities">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".backgroundTasks.ReminderReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".widget.CashBoxWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/cash_box_manager_widget_info" />
        </receiver>

        <service
            android:name=".widget.CashBoxWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity
            android:name=".ui.cashBoxManager.CashBoxDeletedFragment"
            android:label="@string/title_deletedCashBox"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ui.cashBoxManager.CashBoxPeriodicFragment"
            android:label="@string/title_periodicEntry"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".ui.cashBoxManager.CashBoxManagerActivity"
            android:label="@string/main_cashBoxManager"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibal.utilities.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.randomChooser.RandomChooserActivity"
            android:label="@string/main_randomChooser"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.vibal.utilities.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>