<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cashBoxManager.CashBoxManagerActivity"
    android:baselineAligned="false">

    <fragment android:name="com.vibal.utilities.ui.cashBoxManager.CashBoxManagerFragment"
        android:id="@+id/containerManager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_cashbox_selected"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </FrameLayout>
</LinearLayout>